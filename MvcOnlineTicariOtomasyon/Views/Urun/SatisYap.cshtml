@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<form class="form-group" method="post" style="margin-top:10px;">
    @Html.LabelFor(x => x.URUNID)
    <input type="text" name="URUNID" value="@ViewBag.d" class="form-control" readonly />
    <br />
    @Html.Label("ÜRÜN")
    <input type="text" name="URUNAD" value="@ViewBag.d1" class="form-control" readonly />
    <br />
    @Html.Label("CARİ")
    @Html.DropDownListFor(x => x.CARIID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PERSONEL)
    @Html.DropDownListFor(x => x.PERSONELID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ADET)
    <input type="number" name="ADET" id="adet" min="0" class="form-control" onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.FIYAT)
    <input type="text" name="FIYAT" value="@ViewBag.SatisFiyat" id="fiyat" class="form-control" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.TOPLAMTUTAR)
    <input type="text" name="TOPLAMTUTAR" value="0" id="toplamtutar" class="form-control" readonly />
    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
