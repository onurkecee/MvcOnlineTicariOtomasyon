@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<table class="table table-hover">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM TUTAR</th>
        <th>TARİH</th>
        <th>YAZDIR</th>
    </tr>

    @foreach (var satis in Model)
    {
        <tr>
            <td>@satis.SATISID</td>
            <td>@satis.URUNLER.URUNAD</td>
            <td>@satis.CARILER.CARIAD @satis.CARILER.CARISOYAD</td>
            <td>@satis.PERSONEL.PERSONELAD  @satis.PERSONEL.PERSONELSOYAD</td>
            <td>@satis.FIYAT</td>
            <td>@satis.ADET</td>
            <td>@satis.TOPLAMTUTAR</td>
            <td>@satis.TARIH.ToString("dd-MM-yyyy")</td>
        </tr>
    }
</table>
<button class="btn btn-dark">Yazdır</button>


