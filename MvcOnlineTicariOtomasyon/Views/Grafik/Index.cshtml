
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@{
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Değerler");
    grafik.AddSeries(
        name: "Veriler",
        chartType:"Pie",
        xValue: new[] { "Beyaz Eşya", "Telefon", "Küçük Ev Aletleri", "Bilgisayar", "Mobilya" },
        yValues: new[] { 50, 100, 45, 78, 15 }
        );
    grafik.Write();

}